<form action="/anon_routes" method="post" id="distance_form">
  <section id="distance_form_input">
    <label for="input_miles">Distance</label>
    <input type="text" name="input_miles" value="3.1"></input>
    <select id="distance-units" name="units">
      <option value="miles">miles</option>
      <option value="km">km</option>
    </select>

    <section id="location-input">
      <label for="start_location">Location</label>
      <input id="start_location" type="text" name="start_location" placeholder="use my current location"></input>
    </section>
  </section>

  <input class="btn loopify" name="commit" type="submit" value="Loopify">
</form>
